mixin technologiesSeparateStack(items, title)
  +b.SECTION.technologies-separate.section.section_light&attributes(attributes)
    +e.in.section__in
      +e.main
        +e.title-wrapper.section__title-wrapper
          +e.H2.title.section__title.title-center.js-animate-title#technologies=title
          +e.P.title-desc.section__title-desc.title-desc-center Технологии
        +e.wrapper
          +e.inner-list.technologies__inner-list.technologies-separate-inner-list
            +e.UL.inner-sublist.technologies__inner-sublist.technologies-separate
              if items.techs.length % 2 === 0
                each tech in items.techs
                  +e.LI.inner-subitem.technologies__inner-subitem.penultimate
                    picture
                      source(type="image/webp", data-srcset=tech.icon + ".webp")
                      img(class="lazyload", data-src=tech.icon + ".png", title=tech.techTitle, alt="")
              else
                each tech in items.techs
                  +e.LI.inner-subitem.technologies__inner-subitem
                    picture
                      source(type="image/webp", data-srcset=tech.icon + ".webp")
                      img(class="lazyload", data-src=tech.icon + ".png", title=tech.techTitle, alt="")
